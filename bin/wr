#!/bin/bash
# wr = write
# $1 = package name

set +x
set -e

. "$RIDHOME"/env || { echo '$RIDHOME not set' >&2 ; exit 1 ;}

[ -z "$1" ] && die 'Missing $1'
[ -z "$RIDMETA" ] && die '$RIDMETA not set'

METAFILE="$RIDMETA/$1"

if [ -e "$METAFILE" ]; then
  nvim "$METAFILE"
  exit 0
fi

cat << ~fin. > "$METAFILE"
#!/bin/bash
NAME="$1"
VERS=""
LINK=""
UPST=""
DEPS=""


idir() {

}

rdir() {

echo "not implemented"

}
~fin.

nvim "$METAFILE"
chmod +x "$METAFILE"
