#!/bin/bash
# wr = write
# $1 = package name

[ -z "$1" ] && exit 1
[ -z "$RIDMETA" ] && exit 1

METAFILE="$RIDMETA/$1"

if [ -e "$METAFILE" ]; then
  nvim "$METAFILE"
  exit 0
fi

cat << ~fin. > "$METAFILE"
#!/bin/bash
NAME="$1"
VERS=""
LINK=""
UPST=""
DEPS=""


idir() {

}

rdir() {

echo "not implemented"

}
~fin.

nvim "$METAFILE"
