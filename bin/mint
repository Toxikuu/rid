#!/bin/bash

METAFILE="$2"

[ -z $RIDHOME ] && RIDHOME="/etc/rid"
[ -z $RIDBUILDING ] && RIDBUILDING="/tmp/rid/building"
[ -z $RIDTMP ] && RIDTMP="/tmp/rid"

function pre {
  bv=$(compgen -v)
  . $RIDHOME/env || { echo "Failed to source $RIDHOME/env"; exit 1; }
  . $RIDHOME/meta/"$METAFILE" || { die "Failed to source $RIDHOME/meta/$METAFILE"; exit 1; }
  av=$(compgen -v)

  rm -f $RIDTMP/failed
}

function cleanup {
  for var in $av; do
    if ! echo "$bv" | grep -q "^$var$"; then
      unset "$var"
    fi
  done
  rm -rf "$RIDBUILDING/$NAME-$VERS"
}

function ins {
  check_perms
  pushd "$RIDBUILDING/$NAME-$VERS" > /dev/null || { die "Failed to enter build directory"; exit 1; }

  echo "Installing $NAME-$VERS..."
  eval "$IDIR"
}

function rem {
  check_perms

  echo "Removing $NAME-$VERS..."
  eval "$RDIR"
}

function check_perms {
  if [ "$EUID" -ne 0 ]; then
    die "Insufficient permissions"
  fi
}

pre
case $1 in
  i)
    ins || die "Install failure"
    popd > /dev/null
    cleanup
    ;;
  r)
    rem
    cleanup
    ;;
  u)
    if [ -z "$UDIR" ]; then
      echo "Updating $NAME (default)..."
      ins
    else
      echo "Updating $NAME (custom)..."
      eval "$UDIR"
    fi
    cleanup
    ;;
  s)
    echo "Status of $NAME-$VERS: $STAT"
    cleanup
    ;;
  v)
    echo "NAME: $NAME"
    echo "VERS: $VERS"
    echo "LINK: $LINK"
    echo "STAT: $STAT"
    echo "DEPS: $DEPS"
    echo ""
    echo "IDIR: $IDIR"
    echo "RDIR: $RDIR"
    echo "UDIR: $UDIR"
    ;;
  *)
    echo "Invalid action: $2"
    echo "Valid actions:"
    echo "i - install"
    echo "r - remove"
    echo "u - update"
    echo "s - status"
    echo "v - variables"
    exit 1
    ;;
esac
