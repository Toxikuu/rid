#!/bin/bash
# xt = extract
# wraps the extraction process for rid
#
# $1 = tarball
# $2 = pkg_str
# $3 = vers

if [ $# -lt 3 ]; then
    echo "Usage: $0 <tarball> <pkg_str> <vers>"
    exit 1
fi

die() {
    echo "Error: $1" >&2
    touch "$RIDTMP"/failed
    exit 1
}

rm -rf   "$RIDBUILDING/"*     "$RIDEXTRACTION/"*
tar xf   "$RIDSOURCES/$1"* -C "$RIDEXTRACTION" || die "Failed to extract tarball"
mkdir -p "$RIDBUILDING/$2-$3"
mv -Tf   "$RIDEXTRACTION/"*   "$RIDBUILDING/$2-$3"
