#!/bin/bash
# xt = extract
# wraps the extraction process for rid
#
# $1 = pkg_str
# $2 = vers

if [ $# -lt 2 ]; then
    echo "Usage: $0 <pkg_str> <vers>"
    exit 1
fi

die() {
    echo "Error: $1" >&2
    touch "$RIDTMP"/failed
    exit 1
}

rm -rf   "$RIDBUILDING/"*     "$RIDEXTRACTION/"*
tar xf   "$RIDSOURCES/$1-$2.t"* -C "$RIDEXTRACTION" || die "Failed to extract tarball"
mkdir -p "$RIDBUILDING/$1-$2"
mv -Tf   "$RIDEXTRACTION/"*   "$RIDBUILDING/$1-$2"
