#!/bin/bash
NAME="libidn2"
VERS=2.3.7
LINK="https://ftp.gnu.org/gnu/libidn/$NAME-$VERS.tar.gz"
DEPS="libunistring"


IDIR=$(cat <<EOF

./configure --prefix=/usr --disable-static &&
make
make install

make distclean
CC="gcc -m32" CXX="g++ -m32"         \
PKG_CONFIG_PATH=/usr/lib32/pkgconfig \
./configure --prefix=/usr            \
            --libdir=/usr/lib32      \
            --host=i686-pc-linux-gnu \
            --disable-static &&

make
make DESTDIR=$PWD/DESTDIR install
cp -vr DESTDIR/usr/lib32/* /usr/lib32
rm -rf DESTDIR
ldconfig

EOF
)

RDIR=$(cat <<EOF

echo not implemented

EOF
)

UDIR=$(cat <<EOF
EOF
)
